<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calorie_cardview"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/cardview_margin_horizontal"
    android:layout_marginRight="@dimen/cardview_margin_horizontal"
    android:layout_marginTop="@dimen/cardview_margin_vertical_top">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/cardview_content_padding"
        android:orientation="horizontal"
        android:columnCount="2"
        android:rowCount="3">

        <TextView
            android:id="@+id/calorie_title"
            android:text="Sandwhich and Apples"
            android:textColor="@color/primary_dark"
            android:textSize="24sp"
            android:paddingBottom="8sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:gravity="center_vertical" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_columnSpan="2"
            android:layout_row="1"
            android:orientation="horizontal"
            android:paddingBottom="16sp">

            <TextView
                android:id="@+id/calorie_date"
                android:text="9/7/2015"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/lightgray" />

            <TextView
                android:id="@+id/calorie_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="8dp"
                android:text="12:30pm"
                android:textColor="@color/lightgray" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/calorie_amount"
                android:text="1600 Calories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/accent"
                />
        </LinearLayout>

    </GridLayout>

</android.support.v7.widget.CardView>