<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calorie_cardview"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="@dimen/cardview_margin_horizontal"
    android:layout_marginRight="@dimen/cardview_margin_horizontal"
    android:layout_marginTop="@dimen/cardview_margin_vertical_top">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/cardview_content_padding_small"
        android:orientation="horizontal"
        android:columnCount="2"
        android:rowCount="2">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/calorie_date"
                android:text="9/7/2015"
                android:textColor="@color/accent"
                android:padding="6dp"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/calorie_time"
                android:layout_height="wrap_content"
                android:layout_width="110dp"
                android:gravity="center_horizontal"
                android:text="12:30pm"
                android:paddingTop="0dp"
                android:layout_row="1"
                android:layout_column="0"
                android:textColor="@color/lightgray" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_column="1"
            android:layout_rowSpan="2"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/calorie_amount"
                android:text="1600 Calories"
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:gravity="center_vertical"
                android:textStyle="bold"/>
        </LinearLayout>

    </GridLayout>

</android.support.v7.widget.CardView>